<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <color name="ActivityBackground">#e3f2fd</color>
    <style name="ProjectTheme" parent="android:Theme.Holo.Light">
        <item name="android:layout_width">230sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#F08C35</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProjectTheme.Magneta">
        <item name="android:layout_width">230sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#d81b60</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
